<div class="post-new">
  <img src="<%= "/edit_image/edit_title.jpg" %>" class="edit-title">
  <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="new-post">
      <% @post.errors.full_messages.each do |message| %>
        <div class="post-error">
          <%= message %>
        </div>
      <% end %>
      <input type="text" value="<%= @post.title %>" placeholder="タイトルを入力してください" name="title" class="new-title">
      <textarea placeholder="投稿を入力してください" name="content" class="new-content"><%= @post.content %></textarea>
      <input type="submit" value="送信" class="submit">
    </div>
  <% end %>
</div>