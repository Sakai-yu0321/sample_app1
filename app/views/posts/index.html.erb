<div class="post-index">
  <% @posts.each do |post| %>
    <div class="post-container">
      <img src="<%= "/top_image/nikibikun.jpg" %>" class="nikibikun-image">
      <div class="post-title">
        <b><%= post.title %></b>
      </div>
      <div class="post-content">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>