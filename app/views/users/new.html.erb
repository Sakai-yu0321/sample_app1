<div class="user-signup">
  <img src="<%= "/user_images/signup.jpg" %>" class="signup-title">
  <% @user.errors.full_messages.each do |message| %>
    <div class="signup-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_tag("/users/create") do %>
    <div class="signup-form">
      <input type="text" name="name" placeholder="名前を入力してください" value="<%= @user.name %>" class="signup-name">
      <input type="text" name="password" placeholder="パスワードを入力してください" value="<%= @user.password %>" class="signup-password">
      <input type="submit" value="送信" class="signup-submit">
    </div>
  <% end %>
</div>